<% provide(:title, "Edit user") %>
<h1>Update your profile</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= simple_form_for(@user) do |f| %>
      <%= render 'shared/error_messages' %>

      <%= f.input :name %> 
      <%= f.input :email %> 
      <%= f.input :password %>
      <%= f.input :password_confirmation %>

      <%= f.submit "Save changes", class: "btn btn-lg btn-primary spacer" %>
    <% end %>

    <div class="spacer col-md-6 col-md-offset-3"> 
    <%= gravatar_for @user %>
    <a href="http://gravatar.com/emails">change</a></div> 
  </div>
</div>
