<% provide(:title, "Sign in") %>
<h1>Sign in</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= simple_form_for(:session, url: sessions_path, html: {class: 'form-horizontal'} ) do |f| %>

      <%= f.input :email %>
      <%= f.input :password %>

      <%= f.submit "Sign in", class: "btn btn-lg btn-primary" %>
    <% end %>

    <p class="spacer text-center">New user?    
    <%= link_to "Sign up now!", signup_path, class: "btn btn-info" %> </p>
  </div>
</div>
